{
    "manifest_version": 3,
    "name": "Calendar Plus",
    "version": "1.0",
    "description": "Customizes Google Calendar viewing options",
    "action": {
      "default_popup": "popup.html"
    },
    "permissions": ["activeTab"],
    "content_scripts": [
      {
        "matches": ["https://calendar.google.com/*"],
        "js": ["content.js"],
        "css": ["styles.css"]
      }
    ],
    "icons": {
        "48": "icon.png"
    }
}